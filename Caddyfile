{
  servers {
    trusted_proxies static private_ranges
  }
}

{$BASE_URL} {
  route {
    reverse_proxy /api/* http://takobox_server:8000
    reverse_proxy /docs* http://takobox_server:8000

    handle_path /thumbs/* {
      file_server {
        root /data/thumbs
      }
    }

    file_server {
      root /data/uploads
      pass_thru
    }

    reverse_proxy http://takobox_web:3000
  }
}
