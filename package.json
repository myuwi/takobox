{
  "name": "takobox",
  "license": "ISC",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build:css": "pnpm tailwindcss -i ./src/main.css -o ./public/main.css --minify",
    "watch:css": "pnpm tailwindcss -i ./src/main.css -o ./public/main.css --minify --watch",
    "format:css": "rustywind --write . && rustywind --write . --custom-regex \"@apply ([_a-zA\\.-Z0-9\\-:\\[\\] ]+);\""
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.6",
    "rustywind": "^0.19.0",
    "tailwindcss": "^3.3.3"
  }
}
